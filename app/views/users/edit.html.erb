<div class="tab-pane d-flex justify-content-center row" id="settings" style="display: block;">
  <div class="col-3"></div>			
	<div class="settings p-5 col-6">
		<div class="categories" id="accordionSettings">
			<h1>Edit Profile</h1>
			<!-- Start of My Account -->
			<div class="category">
				<div class="collapse" style="display: block !important;">
					<div class="content">
						<div class="upload">
							<div class="data row">
                <div class='avatar-xl col-4 d-flex justify-content-center' style="background: #99ccff;color: white;" ><span style="font-size: 30px;"><%= current_user.username.upcase[0..1]%></span></div>
								<label class = "col-8">
									<input type="file" class="mb-2">
									<span class="btn button col-6 w-50 h-50" style="padding-top: 3%;">Upload avatar</span>
								</label>
							</div>
							<p>For best results, use an image at least 256px by 256px in either .jpg or .png format!</p>
						</div>
						<%= form_for @user do |f| %>
              <div class="field #{'is-invalid' if invalid_username}">
                <% invalid_username = @user.errors.include?(:username) %>
                <%= f.label :username, "Username <span>*</span>".html_safe %>
                <%= f.text_field :username, class: "form-control", placeholder: "Username", required: true %>
                <% if invalid_username %>
                  <div class="invalid-feedback d-block">
                    <% @user.errors.full_messages_for(:username).each do |error_message| %>
                      <%= error_message %>
                    <% end %>
                  </div>
                <% end %>
              </div>
              <div class="field #{'is-invalid' if invalid_email}">
                <% invalid_email = @user.errors.include?(:email) %>
                <%= f.label :email, "Email <span>*</span>".html_safe %>
                <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address", required: true %>
                <% if invalid_email %>
                  <div class="invalid-feedback d-block">
                    <% @user.errors.full_messages_for(:email).each do |error_message| %>
                      <%= error_message %>
                    <% end %>
                  </div>
                <% end %>
              </div>
              <div class="field mb-4 #{'is-invalid' if invalid_password}">
                <% invalid_password = @user.errors.include?(:password_digest) %>
                <%= f.label :password_digest, "Password".html_safe %>
                <%= f.password_field :password_digest, class: "form-control", placeholder: "Enter a new password" %>
                <% if invalid_password %>
                  <div class="invalid-feedback d-block">
                    <% @user.errors.full_messages_for(:password_digest).each do |error_message| %>
                      <%= error_message %>
                    <% end %>
                  </div>
                <% end %>
              </div>
              <%= f.submit "Apply", class: "btn button w-25 h-25" %>
              <%= link_to "Cancel", channels_path, class: "btn button btn-danger w-25 bg-danger" %>
            <% end %>
					</div>
				</div>
			</div>
			<!-- End of My Account -->
		</div>
	</div>
  <div class="col-3"></div>     
</div>
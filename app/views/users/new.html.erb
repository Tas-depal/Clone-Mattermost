<body class="start">
	<main>
		<div class="layout">
			<!-- Start of Sign Up -->
			<div class="main order-md-2">
				<div class="start">
					<div class="container">
						<div class="col-md-12">
							<div class="content">
								<h1>Create Account</h1>
								<%= form_with model: @user, class: 'signup', :multipart=> true do |form| %>
									<div class="form-parent">
										<div class="form-group #{'is-invalid' if invalid_username}">
                      <% invalid_username = @user.errors.include?(:username) %>
											<%= form.text_field :username, id: 'inputName', class: "form-control", placeholder: 'Username', required: true%>
											<button class="btn icon"><i class="material-icons">person_outline</i></button>
                      <% if invalid_username %>
                        <div class="invalid-feedback d-block">
                          <% @user.errors.full_messages_for(:username).each do |error_message| %>
                            <%= error_message %>
                          <% end %>
                        </div>
                      <% end %>
										</div>
										<div class="form-group #{'is-invalid' if invalid_email}">
                      <% invalid_email = @user.errors.include?(:email) %>
                      <%= form.text_field :email, id: 'inputEmail', class: "form-control", placeholder: 'Email Address', required: true%>
											<button class="btn icon"><i class="material-icons">mail_outline</i></button>
                      <% if invalid_email %>
                        <div class="invalid-feedback d-block">
                          <% @user.errors.full_messages_for(:email).each do |error_message| %>
                            <%= error_message %>
                          <% end %>
                        </div>
                      <% end %>
										</div>
									</div>
									<div class="form-group #{'is-invalid' if invalid_password}">
                    <% invalid_password = @user.errors.include?(:password_digest) %>
                    <%= form.password_field :password_digest, id: 'inputPassword', class: "form-control",placeholder: 'Password', required: true%>
										<button class="btn icon"><i class="material-icons">lock_outline</i></button>
                    <% if invalid_password %>
                      <div class="invalid-feedback d-block">
                        <% @user.errors.full_messages_for(:password_digest).each do |error_message| %>
                          <%= error_message %>
                        <% end %>
                      </div>
                    <% end %>
									</div>
									<%= form.submit "Sign Up", class: "btn button" %>
									<div class="callout" style = 'display: block; margin-top: 4%;'>
										<span>Already Have an Account?<%= link_to 'Sign In', root_path %></span>
									</div>
								<% end %>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- End of Sign Up -->
		</div> <!-- Layout -->
	</main>
</body>


